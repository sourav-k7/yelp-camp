<% layout('layout/boilerplate.ejs') %> 
   <div id="map" style="width: 100%; height: 500px;"></div>
   <h1>All Campgrounds</h1> 
     <% for(let camp of campground){%> 
      <div class="card mb-3">
         <div class="row">
            <div class="col-md-4">
               <% if(camp.images.length){ %> 
               <img class="img-fluid" src=<%= camp.images[0].url%>  alt="">
               <% }else{ %> 
               <img class="img-fluid" src="https://res.cloudinary.com/deku/image/upload/v1616411930/YelpCamp/jb20rosn2twyulp8kc2z.jpg"  alt="">
               <% } %> 

            </div>
            <div class="col-md-8">
               <div class="card-body">
                  <h5 class="card-title"><%= camp.title %> </h5>
                  <p class="card-text"><%= camp.description %> </p>
                  <p class="card-text">
                     <small class="text-muted"><%= camp.location %> </small>
                  </p>
                  <a class="btn btn-primary" href="/campground/<%= camp._id %> ">View <%= camp.title %> </a>
               </div>
            </div>
         </div>
      </div>
      <% } %> 
      <script >
         const campgroundJSON = {features:<%-JSON.stringify(campground)%>}
      </script>
<script src="/javascript/clusterMap.js"></script>